<% content_for :title, @pic.title+' | ' %>

<section>
  <% content_for :section do %>
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="panel panel-info">
              <div class="panel-heading">
                <h3 class="panel-title"><%= @pic.title %><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, pic_path(@pic), method: :delete, class: 'pull-right', data: { confirm: "Are you sure?" } %></h3>
              </div>
              <div class="panel-body">
                <div class="row">
                  <div class="col-md-8">
                    <%= link_to @pic.image.url(:original) do %>
                        <%= image_tag @pic.image.url(:original), class: 'img-responsive' %>
                    <% end %>
                  </div>
                  <div class="col-md-4">
                    <%= @pic.details %><br>

                    <%= link_to 'Edit', edit_pic_path(@pic), class: 'btn btn-primary btn-lg btn-block' %><br>
                    <div class="well"><%= link_to @url, @url, target: '_blank' %></div><br>
                    <div class="text-center">
                      <%= link_to 'https://www.facebook.com/sharer/sharer.php?u='+@url, target: '_blank' do %>
                          <i class="fa fa-facebook-square fa-4x"></i>
                      <% end %>
                      <%= link_to 'https://twitter.com/home?status=Check%20this%20pic%3A%20'+@url, target: '_blank' do %>
                          <i class="fa fa-twitter-square fa-4x"></i>
                      <% end %>
                    </div><br>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</section>