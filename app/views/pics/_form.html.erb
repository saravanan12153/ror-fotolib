<%= simple_form_for(@pic) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, required: true, label: false, placeholder: 'Title', input_html: {class: 'form-control input-lg'} %>
    <%= f.input :details, label: false, placeholder: 'Detail', input_html: {class: 'form-control input-lg', rows: 5} %>
    <%= f.input :image, as: :file, label: false, placeholder: 'Attachment', input_html: {class: 'file'} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary btn-lg btn-block', value: 'Save' %>
  </div>
<% end %>
